extends layout
block body
  div(layout="column" layout-fill ng-controller="AppCtrl")
    md-sidenav.md-sidenav-left.md-whiteframe-z2(md-component-id="left")
      md-toolbar.md-theme-indigo
        h1.md-toolbar-tools
          | Menú
      md-content(layout-padding="")
        .md-menu-container.md-active.md-clickable(aria-hidden="false")
          div(flex layout="row")
            md-menu-content(width="4", role="menu")
              md-menu-item(ng-repeat="menu in menus")
                button.md-button.md-ink-ripple.active(type="button", role="menuitem", aria-label="Redial", ng-click="redirectTo(menu.link)")
                  md-icon(md-font-library="material-icons")
                    | {{menu.icon}}
                  span 
                    | {{menu.name}}
    md-toolbar.md-whiteframe-glow-z1.site-content-toolbar.md-shadow-bottom-z-1
      .md-toolbar-tools
        md-button.md-icon-button(aria-label="Settings",ng-click="toggleLeft()")
          md-icon(md-font-library="material-icons")
            | reorder
        h2
          span
            | Ingeniería de Software II
        span(flex="")
        md-button.md-icon-button(aria-label="Settings",ng-click="logIn($event)")
          md-tooltip(md-direction="down")
            | Log In
          md-icon(md-font-library="material-icons")
            | wc
    md-content.layout-column.flex(md-scroll-y="", layout="column", flex="")
      ng-view

  script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular.js")
  script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular-route.js")
